            android:name="com.gemptc.wd.activities.social.SearchPostActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.gemptc.wd.activities.home.ProductDetailActivity" />

        <!-- QQ的登录的activity -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1105446072" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name="com.gemptc.wd.activities.mine.MineDetalActivity" />
        <activity android:name="com.gemptc.wd.activities.mine.EdtiUserDataActivity"></activity>
