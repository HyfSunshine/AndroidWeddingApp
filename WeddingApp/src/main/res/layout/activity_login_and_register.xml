<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gemptc.wd.activities.startApp.LoginAndRegisterActivity">
<android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_weight="5"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/zhuColor">
</android.support.v4.view.ViewPager>
    <com.viewpagerindicator.LinePageIndicator
        android:id="@+id/indicator"
        android:padding="5dip"
        android:layout_marginTop="5dp"
        app:selectedColor="#FF705E"
        app:strokeWidth="2dp"
        app:lineWidth="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_kongxin_kuang"
            android:text="登 录"
            android:textColor="@color/zhuColor"
            android:textSize="15sp"
            android:onClick="login"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_red_shixin_kuang"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:onClick="register"/>
    </LinearLayout>
</LinearLayout>
