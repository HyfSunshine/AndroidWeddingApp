<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:background="#fff">

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:layout_gravity="center"
        android:src="@drawable/icon_search_ss"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="婚礼说"
        android:textColor="#ff705e"
        android:textSize="25sp"
       android:gravity="center"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="center"
        android:src="@drawable/btn_edit_red"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center">

     <ImageView
         android:layout_width="match_parent"
         android:layout_weight="4"
         android:layout_height="0dp"
         android:scaleType="fitXY"
         android:src="@drawable/eee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
           <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="那年"
                android:textColor="#fff"
                android:gravity="center"
               android:background="#a80de7d9"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="8"
               android:text="我们的爱情故事，那一年我们19岁"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="婚礼"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#d2f7030f"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="这些年的喜糖盒真的都好美..."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="甜蜜"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#a8f44308"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="两人世界到三口之家"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="倾诉"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#a8303631"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:text="大家来聊聊前女友的事"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_huiyilu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:gravity="center"
            android:text="那年·回忆录"/>


        <TextView
            android:id="@+id/tv_jinxingce"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:gravity="center"
            android:text="婚礼·进行册"/>

        <TextView
            android:id="@+id/tv_shenghuoji"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:gravity="center"
            android:text="甜蜜·生活季"/>
        <TextView
            android:id="@+id/tv_fannaoji"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:gravity="center"
            android:text="倾诉·烦恼集"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>