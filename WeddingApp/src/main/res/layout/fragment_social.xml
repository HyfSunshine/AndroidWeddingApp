<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e9e7e7">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:background="#fff">

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:layout_gravity="center"
        android:src="@drawable/icon_search_ss"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="婚礼说"
        android:textColor="#ff705e"
        android:textSize="25sp"
       android:gravity="center"
        android:layout_height="match_parent"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_gravity="center"
        android:src="@drawable/btn_edit_red"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="12"
    android:orientation="vertical"
    android:gravity="center">

     <ImageView
         android:layout_width="match_parent"
         android:layout_weight="4"
         android:layout_height="0dp"
         android:scaleType="fitXY"
         android:src="@drawable/eee"
         android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#e9e7e7"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
           <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="那年"
                android:textColor="#fff"
                android:gravity="center"
               android:background="#a80de7d9"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="8"
               android:background="#fff"
               android:text="我们的爱情故事，那一年我们19岁"
               android:layout_marginBottom="1dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="婚礼"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#d2f7030f"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="#fff"
                    android:text="这些年的喜糖盒真的都好美..."
                    android:layout_marginBottom="1dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="甜蜜"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#a8f44308"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="#fff"
                    android:text="两人世界到三口之家"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="倾诉"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#a8303631"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:background="#fff"
                    android:text="大家来聊聊前女友的事"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" 
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:onClick="huiyilu">
            
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/socialuser1"/>
         <TextView
            android:id="@+id/tv_huiyilu"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:textSize="25sp"
            android:gravity="center"
            android:text="那年·回忆录"
            android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/icon_more_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:onClick="jinxingce">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/socialuser3"/>
            <TextView
                android:id="@+id/tv_jinxingce"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textSize="25sp"
                android:gravity="center"
                android:text="婚礼·进行册"
                android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/icon_more_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:onClick="shenghuoji">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/socialuser4"/>
            <TextView
                android:id="@+id/tv_shenghuoji"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textSize="25sp"
                android:gravity="center"
                android:text="甜蜜·生活季"
                android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/icon_more_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:onClick="fannaoji">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/socialuser5"/>
            <TextView
                android:id="@+id/tv_fannaoji"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:textSize="25sp"
                android:gravity="center"
                android:text="倾诉·烦恼集"
                android:layout_marginBottom="3dp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/icon_more_arrow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>