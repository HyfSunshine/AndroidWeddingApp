<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">






    <LinearLayout
        android:id="@+id/post_zhidinglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/post_imageview_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_top"/>
        <TextView
            android:id="@+id/post_textview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶的标题"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

 <LinearLayout
     android:id="@+id/post_feilayout"
     android:layout_width="match_parent"
     android:layout_height="95dp"
     android:background="#fff"
     android:orientation="horizontal">
     <ImageView
         android:id="@+id/social_userpic"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:background="@mipmap/u107"
         android:layout_gravity="center"
         android:layout_marginLeft="10dp"/>
     
     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="5"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/social_username"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="独孤觅影"
                 android:gravity="center_vertical"
                 android:textColor="#ff705e"
                 android:layout_weight="4"
                 android:layout_marginLeft="10dp"
                 android:textSize="18sp"/>

             <TextView
                 android:id="@+id/social_posttime"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="1小时前"
                 android:gravity="center_vertical"
                 android:paddingRight="10dp"
                 android:textSize="15sp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1">
             <TextView
                 android:id="@+id/social_posttitle"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="大家分享一下婚礼的妆容吧"
                 android:singleLine="true"
                 android:paddingLeft="10dp"
                 android:textColor="#000"
                 android:textSize="22sp"/>
         </LinearLayout>
         
     </LinearLayout>

    

 </LinearLayout>

</LinearLayout>