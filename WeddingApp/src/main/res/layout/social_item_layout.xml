<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<LinearLayout
        android:id="@+id/post_zhidinglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/post_imageview_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_top"/>
        <TextView
            android:id="@+id/post_textview_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="置顶的标题"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
<LinearLayout
    android:id="@+id/post_feilayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="95dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#fff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/social_userpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/u107"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/social_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="独孤觅影"
            android:textColor="#ff705e"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/social_posttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:paddingRight="10dp"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/social_posttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大家分享一下婚礼的妆容和发型吧"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:textSize="22sp"/>
</LinearLayout>
</LinearLayout>