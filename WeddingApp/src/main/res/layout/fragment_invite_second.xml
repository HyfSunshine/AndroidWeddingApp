<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FED9E1"
    android:orientation="vertical"
    tools:context="com.gemptc.wd.activities.home.invitation.InviteDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:padding="10dp">
        <com.gemptc.wd.view.CircleImageView
            android:id="@+id/iv_invite_userImage"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/mine_user_icon"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="15dp"
            android:layout_height="35dp"
            android:src="@mipmap/arrow_white_left"/>
        <TextView
            android:id="@+id/tv_invite_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:text=""/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_shiyongmuban"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_pink_shixin_kuang"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="立即使用此模板"
        />

    <LinearLayout
        android:id="@+id/ll_invite_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="  通知好友  "
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_invite_sendByQQ"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/icon_login_qq"/>

            <ImageView
                android:id="@+id/iv_invite_sendByWX"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_login_wx"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sendFriends"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_pink_shixin_kuang"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="发送给好友"
            />

    </LinearLayout>
</LinearLayout>
