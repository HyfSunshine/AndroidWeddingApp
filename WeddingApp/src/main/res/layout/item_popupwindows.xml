<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_grey_shixin_kuang">


        <Button
            android:id="@+id/item_popupwindows_camera"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textColor="@color/textColor"
            android:background="@drawable/button_white_shixin_kuang"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/item_popupwindows_Photo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从相册选择"
            android:textColor="@color/textColor"
            android:background="@drawable/button_white_shixin_kuang"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/item_popupwindows_cancel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:background="@drawable/button_red_shixin_kuang"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
