<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/userPic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@mipmap/u107"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="独孤觅影"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="#ff705e"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/postTime"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2016年06月03日10时12分25秒"
                android:gravity="center"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/postContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧大家分享一下婚礼的妆容吧"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <com.lzy.ninegrid.NineGridView
            android:id="@+id/gridview_imageview"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            fresco:ngv_singleImageSize="200dp"
            fresco:ngv_singleImageRatio="1.5"
            app:ngv_gridSpacing="4dp"
            app:ngv_maxSize="9"
            fresco:ngv_mode="grid"/>
    </LinearLayout>
</LinearLayout>